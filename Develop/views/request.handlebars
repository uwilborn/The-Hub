<div class="row">
  <div class="col-md-6">
    <h2>Request a Book</h2>

    <form class="form request-form">
      
      <div class="form-group">
        <label for="first-request">Requester's First Name:</label>
        <input class="form-input" type="text" id="first-request" />
      </div>
      
      <div class="form-group">
        <label for="last-request">Requester's Last Name:</label>
        <input class="form-input" type="text" id="last-request" />
      </div>
      
      <div class="form-group">
        <label for="author-first">Author First Name:</label>
        <input class="form-input" type="text" id="author-first" />
      </div>
      
      <div class="form-group">
        <label for="author-last">Author Last Name:</label>
        <input class="form-input" type="text" id="author-last" />
      </div>
      
      <div class="form-group">
        <label for="btitle">Book Title:</label>
        <input class="form-input" type="text" id="btitle" />
      </div>
      
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
      
    </form>
  </div>
  
  
<script src="./js/request.js"></script>


